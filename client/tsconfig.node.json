/*
 * TypeScript configuration file for the client-side project.
 * This configuration is specifically for Node.js environment.
 */
{
    "compilerOptions": {
        // Enables project references, allowing TypeScript to build the project incrementally.
        "composite": true,

        // Skip type checking of all declaration files (*.d.ts).
        "skipLibCheck": true,

        // Specifies the module code generation: 'ESNext' for modern ECMAScript modules.
        "module": "ESNext",

        // Determines how modules are resolved: 'bundler' for bundler-based resolution.
        "moduleResolution": "bundler",

        // Allows default imports from modules with no default export.
        "allowSyntheticDefaultImports": true
    },
    "include": [
        // Specifies the files to be included in the compilation.
        "vite.config.ts"
    ]
}
