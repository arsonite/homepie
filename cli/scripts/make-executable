# From own imports
import argparse
import os
import sys

sys.path.insert(0, os.path.abspath(os.path.join(os.path.dirname(__file__), '../src')))
from BaseCLI import BaseCLI

class MakeExecutable(BaseCLI):
    def __init__(self):
        super().__init__(
            name="push",
            description="Pushes files to the remote repository",
            flags=[
                {
                    'short': '-f',
                    'long': '--force',
                    'help': 'Force push the changes',
                    'required': False
                },
                {
                    'short': '-b',
                    'long': '--branch',
                    'help': 'Branch to push',
                    'required': True
                }
            ]
        )

    def run(self, args):
        """Implement the core functionality here."""
        print(f"Pushing to branch {args.branch} with force={args.force}")
        
if __name__ == '__main__':
    # Initialize the main CLI and run it with parsed arguments
    make_executable = MakeExecutable()
    
    # Create the main parser and add main CLI arguments
    parser = argparse.ArgumentParser(description=make_executable.description)
    make_executable.add_arguments(parser)
    
    # Parse the arguments passed to the script
    args = parser.parse_args()

    # Run the main CLI logic
    make_executable.run(args)

# sudo chmod a+x $1
# sudo chmod 755 $1
# git add $1
# git update-index --chmod=+x $1