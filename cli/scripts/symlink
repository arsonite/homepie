# From package imports
from teatype.cli import BaseCLI

# TODO: Implement
class Symlink(BaseCLI):
    def meta(self):
        return {
            'name': 'symlink',
            'shorthand': 'sl',
            'help': 'Create a (specific) symlink',
            'commands': [
                {
                    'name': 'teatype',
                    'shorthand': 'a',
                    'help': 'List teatype import schema',
                }
            ],
            'flags': [
                {
                    'long': 'no-copy',
                    'short': 'nc',
                    'help': 'Stop copying the import schema',
                    'required': False
                },
            ]
        }

    def execute(self):
        pass

if __name__ == '__main__':
    Symlink()