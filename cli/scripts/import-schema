# From package imports
from teatype.cli import BaseCLI

# TODO: Implement
class ImportSchema(BaseCLI):
    def meta(self):
        return {
            'name': 'import-schema',
            'shorthand': 'is',
            'help': 'List the import schemas',
            'commands': [
                {
                    'name': 'all',
                    'shorthand': 'a',
                    'help': 'List all import schema',
                },
                {
                    'name': 'go',
                    'shorthand': 'g',
                    'help': 'List the go import schema',
                },
                {
                    'name': 'python',
                    'shorthand': 'py',
                    'help': 'List the python import schema',
                },
                {
                    'name': 'typescript',
                    'shorthand': 'ts',
                    'help': 'List the typescript import schema',
                }
            ],
            'flags': [
                {
                    'long': 'no-copy',
                    'short': 'nc',
                    'help': 'Stop copying the import schema',
                    'required': False,
                },
                {
                    'long': 'no-print',
                    'short': 'nv',
                    'help': 'Stop printing the import schema',
                    'required': False
                },
                {
                    'long': 'no-verbose',
                    'short': 'nv',
                    'help': 'Stop printing verbose output',
                    'required': False
                }
            ]
        }

    def execute(self):
        pass

if __name__ == '__main__':
    ImportSchema()